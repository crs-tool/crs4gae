<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
  
	<groupId>br.uece.crs</groupId>
	<artifactId>crs4gae</artifactId>
	<version>0.0.1</version>
	<packaging>jar</packaging>
  
	<name>CRS4GAE</name>
  	<description>A collection of example classes to be used in the CRSRefactor Tool</description>
  	<url>https://github.com/crs-tool/crs4gae</url>
  
  	<licenses>
    	<license>
      		<name>MIT License</name>
      		<url>https://opensource.org/licenses/MIT</url>
    	</license>
  	</licenses>
  
  	<developers>
    	<developer>
      		<name>Marcos Borges</name>
      		<email>borges.marcos1@gmail.com</email>
      		<organization>Ceara State University</organization>
      		<organizationUrl>http://www.uece.br/</organizationUrl>
    	</developer>
    
    	<developer>
      		<name>Erick Barros</name>
      		<email>erick.barros@aluno.uece.br</email>
      		<organization>Ceara State University</organization>
      		<organizationUrl>http://www.uece.br/</organizationUrl>
    	</developer>
  	</developers>
  
  	<scm>
  		<connection>scm:git:git@github.com:crs-tool/crs4gae.git</connection>
  		<developerConnection>scm:git:git@github.com:crs-tool/crs4gae.git</developerConnection>
  		<url>http://git@github.com:crs-tool/crs4gae.git</url>
  	</scm>
  
  	<properties>
  		<appengine.sdk.version>1.9.38</appengine.sdk.version>
  		<gcloud.plugin.version>2.0.9.74.v20150814</gcloud.plugin.version>
  	</properties>
  
  	<dependencies>
  		<dependency>
			<groupId>com.google.appengine</groupId>
			<artifactId>appengine-api-1.0-sdk</artifactId>
			<version>${appengine.sdk.version}</version>
		</dependency>
		
		<dependency>
			<groupId>com.google.appengine</groupId>
			<artifactId>gcloud-maven-plugin</artifactId>
			<version>2.0.9.74.v20150814</version>
			<type>maven-plugin</type>
		</dependency>
		
		<dependency>
			<groupId>com.google.appengine.tools</groupId>
			<artifactId>appengine-gcs-client</artifactId>
			<version>RELEASE</version>
		</dependency>
  	</dependencies>
  
	<build>
		<plugins>
  			<plugin>
  				<groupId>org.sonatype.plugins</groupId>
  				<artifactId>nexus-staging-maven-plugin</artifactId>
  				<version>1.6.7</version>
  				<extensions>true</extensions>
  				<configuration>
     				<serverId>ossrh</serverId>
     				<nexusUrl>https://oss.sonatype.org/</nexusUrl>
     				<autoReleaseAfterClose>true</autoReleaseAfterClose>
  				</configuration>
			</plugin>
			
			<plugin>
      			<groupId>org.apache.maven.plugins</groupId>
      			<artifactId>maven-gpg-plugin</artifactId>
      			<version>1.5</version>
      			<executions>
        			<execution>
          				<id>sign-artifacts</id>
          				<phase>verify</phase>
          				<goals>
            				<goal>sign</goal>
          				</goals>
        			</execution>
      			</executions>
    		</plugin>
    		
    		<plugin>
      			<groupId>org.apache.maven.plugins</groupId>
      			<artifactId>maven-source-plugin</artifactId>
      			<version>2.2.1</version>
      			<executions>
        			<execution>
          				<id>attach-sources</id>
          				<goals>
            				<goal>jar-no-fork</goal>
          				</goals>
        			</execution>
      			</executions>
    		</plugin>
    		
			<plugin>
      			<groupId>org.apache.maven.plugins</groupId>
      			<artifactId>maven-javadoc-plugin</artifactId>
      			<version>2.9.1</version>
      			<executions>
        			<execution>
          				<id>attach-javadocs</id>
          					<goals>
            					<goal>jar</goal>
          					</goals>
        			</execution>
      			</executions>
    		</plugin>
    		<plugin>
      			<groupId>org.apache.maven.plugins</groupId>
      			<artifactId>maven-gpg-plugin</artifactId>
      			<version>1.5</version>
      			<executions>
        			<execution>
          				<id>sign-artifacts</id>
          				<phase>verify</phase>
          				<goals>
            				<goal>sign</goal>
          				</goals>
        			</execution>
      			</executions>
    		</plugin>
  		</plugins>
	</build>
</project>